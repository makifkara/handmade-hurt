<%- include('partials/header.ejs') %>

<body class="dark-page">
    <%- include('partials/navbar.ejs') %>

    <div class="container justify-content-center align-items-center col-8 light-page p-3">
        <div class="row justify-content-end align-items-end g-2">
            <div class="container-sm justify-content-end align-items-end align-self-end">
                <div class="row justify-content-center align-items-center g-2 d-inline">

                </div>
                <div class="row justify-content-end align-items-end align-self-end g-2 mb-1 light-page rounded-bottom">
                    <div class="col "><h2 class="text-start card-title-my d-inline text-light"><%= selectedPost.title %></h2>
                        <div class="row justify-content-start align-items-start g-2 " >
                            <div class="col-3 align-self-start text-start d-inline text-light"><%= selectedPost.date %></div>
                        </div>
                    </div>
                    <div class="col text-end d-inline"><form action="/selectPost" method="post" class="d-inline">
                        <input type="hidden" name="postID" value="<%= selectedPost.postID %>">
                        <button type="submit" class="btn btn-warning btn-sm" > Edit </button>
                    </form>
                    <form action="/selectdeletePost" method="post" class="d-inline">
                        <input type="hidden" name="postID" value="<%= selectedPost.postID %>">
                        <button type="submit" class="btn btn-danger btn-sm" > Delete </button>
                    </form>
                </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-start align-items-center g-2">
                <div class="col">
                    <div class="card" >
                        <div class="card-body">
                            <div class="post-card-my container">
                                <div class="row justify-content-center align-items-center g-2">
                                    <div class="col">
                                        <p style="display: hidden;"><% selectedPost.content %></p>
                                        <% var paragraphs = selectedPost.content.split('\n');%>
                                        <% paragraphs.forEach(function(paragraph) { %>
                                        <p><%= paragraph %></p>
                                    <% }) %>
                                    </div>
                                </div>
    
                            </div>

                        </div>
                    </div>
                </div>
        </div>
    </div>
</body>

<%- include('partials/footer.ejs') %>